<h1>Группы</h1>

<div class="row">
    
    <div class="col s12 right-align">
        <a href="/groups/add" class="waves-effect waves-light btn green "><i class="material-icons left">add</i>Добавить группу</a>
    </div>
   
</div>
<div class="row">
    {{#if groups.length}}
    <table>
        <thead>
          <tr>
              <th>Id</th>
              <th>Назавние</th>              
              <th></th>              
          </tr>
        </thead>

        <tbody>
         {{#each groups}} 
          <tr>
            <td>{{dataValues.id}}</td>
            <td>{{dataValues.groupName}}</td>            
            <td class="right-align">
                  <a href="/groups/update/{{dataValues.id}}" class="btn-floating btn-large waves-effect waves-light blue"><i class="material-icons">create</i></a>
                  <a href="/groups/delete/{{dataValues.id}}" class="btn-floating btn-large waves-effect waves-light red"><i class="material-icons">delete</i></a>

            </td>
          </tr>
         {{/each}}           
        </tbody>
      </table>
    {{else}} 
      <p>Нет ни одной группы</p> 
    {{/if}}  
</div>